<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geoschnitzel.treasurehunt.shlist.SHListFragment">

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:columnCount="2"
        android:rowCount="5">
        <TextView
            android:id="@+id/shlist_item_visited"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/darkRed"
            android:visibility="visible"
            android:layout_column="0"
            android:layout_rowSpan="5"
            android:layout_gravity="fill_vertical"
            android:layout_marginEnd="5dp" />

        <TextView
            android:id="@+id/shlist_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_column="1"
            android:text="@string/sh_list_item_name"/>

        <TextView
            android:id="@+id/shlist_item_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_column="1"
            android:text="@string/sh_list_item_author" />

        <TextView
            android:id="@+id/shlist_item_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:layout_column="1"
            android:text="@string/sh_list_item_length" />

        <TextView
            android:id="@+id/shlist_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="fill_horizontal|center_vertical"
            android:text="@string/sh_list_item_description" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
